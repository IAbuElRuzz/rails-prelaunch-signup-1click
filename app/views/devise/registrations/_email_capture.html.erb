<%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name) , :html => {:class => 'form-inline' } do |f| %>

<%= f.error_notification %>

<label style="display: <%= "#{@user.errors.any? ? 'none' : 'block'}" %>;">Launching soon.</label>

<div class="input-prepend"><span class="add-on"><i class="icon-envelope"></i></span>
<%= f.text_field :email, :placeholder => 'Your email address...' %>
</div>
<%= f.submit "Notify Me", :class => "btn btn-primary", :id => 'invitation_button' %><p class="help-block">No spam. Just a heads up when we're ready for you.</p>

<% end %>
